{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "strictFunctionTypes": true,
    "stripInternal": true
  },
  "files": ["./src/module.ts"],
  "include": [
    "**/*.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": true,
    "compilationMode": "partial"
  }
}
